{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "importsNotUsedAsValues": "error",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "types": [
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [ "src/*"],
      "@interfaces/*": ["src/interfaces/*"],
      "@scripts/*": ["src/scripts/*"],
      "@components/*": ["src/components/*"],
      "@array/*": ["src/components/array/*"],
      "@checkers/*": ["src/components/checkers/*"],
      "@converters/*": ["src/components/converters/*"],
      "@dom/*": ["src/components/dom/*"],
      "@filters/*": ["src/components/filters/*"],
      "@getters/*": ["src/components/getters/*"],
      "@math/*": ["src/components/math/*"],
      "@promises/*": ["src/components/promises/*"]
    }
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ]
}
