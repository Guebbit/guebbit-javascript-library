{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,

	"allowJs": true,
	"noImplicitAny": true,
	"strictFunctionTypes": false,
	"suppressImplicitAnyIndexErrors": true,

    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
	"src/**/*.ts",
	"src/**/*.tsx",
	"tests/**/*.ts",
	"tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
